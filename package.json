{
  "name": "veterinary-chatbot-sdk",
  "version": "1.0.0",
  "description": "A website-integrable chatbot SDK for veterinary Q&A and appointment booking",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "sdk"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:sdk": "npm run dev --workspace=sdk",
    "build": "npm run build --workspaces && npm run copy-sdk",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:sdk": "npm run build --workspace=sdk && npm run copy-sdk",
    "copy-sdk": "cp sdk/dist/chatbot.js backend/public/chatbot.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
